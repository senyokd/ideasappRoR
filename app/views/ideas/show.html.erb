<p id="notice"><%= notice %></p>

<div class="row">


  <div class="col-md-4">
    <p><b>Idea: </b><%= @idea.name %></p>
    <div class="col-md-9">
      <%= image_tag(@idea.picture, width: '100%') if @idea.picture.present? %>
    </div>
    <p><b>Description: </b><%= @idea.content %></p>


    <h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br>
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add Comment
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>

    <p>
      <%= link_to 'Edit', edit_idea_path(@idea) , :class=>"btn btn-warning" %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete , :class=>"btn btn-danger"  %>|
      <%= link_to 'Back', ideas_path , :class=>"btn btn-success"  %>
    </p>
  </div>
</div>
